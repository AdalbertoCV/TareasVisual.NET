@{
    ViewData["Title"] = "Taco world";
}

<div class="row">
  <div>
    <div class="caja">
        <span><img class="img-circle" src="/imagenes/logo.png" width="200" height="200">
        <img src="/imagenes/gif.gif" width="200" height="200">  </span>
        <h1 class="color"> TACO WORLD</h1>
        <h2 class="color2"> El mundo de los tacos, el mundo feliz!!! </h2>
    </div>
  </div>
</div>

<div id="carousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="/imagenes/slider1.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/imagenes/slider2.png" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/imagenes/slider3.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carousel" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </a>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <h2 class="titulo">Menu</h2>
    </div>
    <div class="col-12 d-flex justify-content-center">
      <div class="titulo-divisor"></div>
    </div>
  </div>
  <div class="row">
    
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="/imagenes/tacos.jpg" >
        <div class="card-body">
        <h5 class="card-title">Platillos</h5>
        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="MenuPlatillos">
          <button type="button" class="btn btn-primary">
                <img class="aparecer" src="/imagenes/gifojo.gif" width="50" height="50">
                Ver Menu
          </button>
        </a>
        </div>
    </div>
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="/imagenes/bebidas.jpg" >
        <div class="card-body">
        <h5 class="card-title">Bebidas</h5>
        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="MenuBebidas">
          <button type="button" class="btn btn-primary">
                <img class="aparecer" src="/imagenes/gifojo.gif" width="50" height="50">
                Ver Menu
          </button>
        </a>
        </div>
    </div>
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="/imagenes/postres.jpg" >
        <div class="card-body">
        <h5 class="card-title">Postres</h5>
        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="MenuPostres">
          <button type="button" class="btn btn-primary">
                <img class="aparecer" src="/imagenes/gifojo.gif" width="50" height="50">
                Ver Menu
          </button>
        </a>
        </div>
    </div>
</div>
      
